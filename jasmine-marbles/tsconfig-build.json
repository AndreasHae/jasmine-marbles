{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "outDir": "./release",
    "sourceMap": true,
    "inlineSources": true,
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true
  },
  "bazelOptions": {
    "suppressTsconfigOverrideWarnings": true
  }
}
